{
  "name": "xrd-analysis",
  "version": "1.0.0",
  "description": "xrd-analysis can convert output files from powder-xray diffraction into JCAMP-DX format and perform analysis (Scherrer equation, ...) on the diffractograms",
  "type": "module",
  "exports": "./src/index.js",
  "files": [
    "src"
  ],
  "scripts": {
    "build": "cheminfo-build  --entry src/index.js --root XRDAnalysis",
    "eslint": "eslint src",
    "eslint-fix": "npm run eslint -- --fix",
    "prettier": "prettier --check src",
    "prettier-write": "prettier --write src",
    "test": "npm run eslint && npm run prettier && npm run test-only",
    "test-only": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/xrd-analysis.git"
  },
  "keywords": [],
  "author": "Luc Patiny",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cheminfo/xrd-analysis/issues"
  },
  "homepage": "https://github.com/cheminfo/xrd-analysis#readme",
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@vitest/coverage-v8": "^3.2.4",
    "cheminfo-build": "^1.2.1",
    "eslint": "^9.31.0",
    "eslint-config-cheminfo": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "rollup": "^4.45.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "common-spectrum": "^2.12.0",
    "fast-xml-parser": "^5.2.5",
    "jszip": "^3.10.1",
    "ml-peak-shape-generator": "^4.2.0",
    "ml-spectra-processing": "^14.13.0",
    "spectrum-generator": "^8.1.0"
  },
  "info": {
    "logo": "https://raw.githubusercontent.com/cheminfo/font/main/src/misc/cristal.svg",
    "domain": [
      "Physical Chemistry",
      "Materials Science"
    ],
    "technique": {
      "name": "PXRD",
      "chmo": "0000158",
      "iupac": "https://doi.org/10.1351/goldbook.D01712"
    },
    "functionality": {
      "fileTypes": [
        {
          "extension": "brml",
          "manufacturer": "Bruker",
          "example": "https://github.com/cheminfo/xrd-analysis/blob/main/testFiles/test.brml?raw=true"
        },
        {
          "extension": "xy",
          "manufacturer": "PowDLL",
          "example": "https://raw.githubusercontent.com/cheminfo/xrd-analysis/main/testFiles/MG1-Cu2O-28_bg_subtracted.xy"
        }
      ]
    }
  }
}
